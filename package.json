    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^2.8.0"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "koa": "^1.2.1",
    "koa-bodyparser": "^2.2.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.4.0",
    "reduct": "^2.0.0"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": "condition-circle"
